@model EventSync.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<style>
    .card {
        background-color: #ffffff;
        color: #004d66;
    }

    .card-title {
        color: #d32f2f !important; /* Bright red for delete emphasis */
    }

    .lead {
        color: #0277bd;
    }

    .fw-semibold {
        color: #0288d1;
    }

    dd {
        color: #004d66;
    }

    hr {
        border-top: 1px solid #b3e5fc;
    }

    .btn-danger {
        background-color: #d32f2f;
        border-color: #c62828;
    }

        .btn-danger:hover {
            background-color: #b71c1c;
            border-color: #b71c1c;
        }

    .btn-outline-secondary {
        color: #0288d1;
        border-color: #81d4fa;
    }

        .btn-outline-secondary:hover {
            background-color: #e1f5fe;
            border-color: #4fc3f7;
            color: #01579b;
        }
</style>


<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm rounded-4 border-0">
            <div class="card-body">
                <h2 class="card-title text-danger text-center mb-4">
                    <i class="bi bi-exclamation-triangle-fill"></i> Delete Event
                </h2>

                <p class="text-center lead">Are you sure you want to delete this event?</p>

                <hr />

                <dl class="row">
                    <dt class="col-sm-4 fw-semibold">Title</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4 fw-semibold">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4 fw-semibold">Date</dt>
                    <dd class="col-sm-8">@Model.Date.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4 fw-semibold">Time</dt>
                    <dd class="col-sm-8">@Model.Time.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-4 fw-semibold">Location</dt>
                    <dd class="col-sm-8">@Model.Location</dd>
                </dl>

                <div class="text-center mt-4">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg me-2">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
