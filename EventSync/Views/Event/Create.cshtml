@model EventSync.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<style>
    .text-primary{
        color: #004d66 !important;
    }
    .card {
        background-color: #ffffff;
        color: #004d66;
    }

    .form-label {
        color: #0277bd;
        font-weight: 500;
    }

    .form-control {
        background-color: #e3f2fd;
        color: #004d66;
        border: 1px solid #b3e5fc;
    }

        .form-control::placeholder {
            color: #81d4fa;
        }

        .form-control:focus {
            background-color: #ffffff;
            color: #004d66;
            border-color: #0288d1;
            box-shadow: 0 0 0 0.2rem rgba(2, 136, 209, 0.25);
        }

    .text-danger {
        color: #d32f2f !important;
    }

    .btn-success {
        background-color: #0288d1;
        border-color: #0288d1;
    }

        .btn-success:hover {
            background-color: #0277bd;
            border-color: #0277bd;
        }

    .btn-outline-secondary {
        color: #0288d1;
        border-color: #81d4fa;
    }

        .btn-outline-secondary:hover {
            background-color: #e1f5fe;
            border-color: #4fc3f7;
            color: #01579b;
        }
